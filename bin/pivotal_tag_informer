#!/usr/bin/env ruby

require 'informer'
require 'optparse'


def parse_options(args)
  options = {}
  OptionParser.new do |opts|
    opts.banner = "Usage: mobile_deployment --config <config> --commitmsg <msg> --tag <note>"

    opts.on("-c", "--config [CONFIG]", "Config file to use in yaml format, e.g. /tmp/config.yml") do |c|
      options[:config] = c
    end

    opts.on("-m", "--commitmsg [COMMITMSG]", "the full commit message") do |m|
      options[:commitmsg] = m
    end

    opts.on("-t", "--tag [TAG]", "the note that needs to get sent in for the stories found in the commit message") do |t|
      options[:tag] = t
    end

    end.parse!

  options
end

options = parse_options(ARGV)

informer = Informer.new(options[:config])
informer.for_realsies = true
informer.send_tag(options[:commitmsg], options[:tag])
